<div class="container">

    <div class="row">
        <h1 style="text-align: center">إضافة مشتريات إلى أرشيف المشتريات</h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/Archive" method="POST">


                <div class="form-group">
                    <select class="form-control" name="type" >
                        <% for(var i=0; i<items.length; i++){ %>
                            <option value="<%=items[i].type%>"><%= items[i].type %> </option>
                        <% } %>
                    </select>
                </div>


                <div class="form-group">
                    <input class="form-control" type="text" name="source" placeholder="المصدر" required>
                </div>
                <div class="form-group">
                    <input class="form-control" type="number"  name="amount" placeholder="الكمية" required>
                </div>
                <div class="form-group">
                    <input class="form-control" type="number" step="any" name="wholesalePrice" placeholder="سعر الجملة للقطعة" required>
                </div>
                <div class="form-group">
                    <input class="form-control" type="date" name="dateDelivered" placeholder="تاريخ الوصول" required>
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="notes" placeholder="ملاحظات أخرى">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">إدخال </button>
                </div>
            </form>
            <a href="/purchase">رجوع للصفحة السابقة </a>
        </div>
    </div>

