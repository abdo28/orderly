<div class="container">
    <h2>طلبات الجملة للمتاجر</h2>
    <br>

    <a href="/wholesale/new" class="btn btn-primary btn-default" style="width:30%">إضافة طلبية جملة </a>
    <br>
    <br>
    <hr>
    <div class="row">
      <div class="col-sm-12">
    <h3>طلبيات الجملة </h3>
    <% for(let i= jomleh.length-1; i>=0 ; i--) { %>
      <div class="jumbotron">
        <div class="container">
          <div class="row">
            <div class="col-md-5">
             <p><strong>إسم المتجر </strong><%=jomleh[i].personName%></p> 
             <p><strong>تاريخ الإستلام: </strong><%= jomleh[i].dateToCompany.getDate() %>-<%= jomleh[i].dateToCompany.getMonth() %>-<%= jomleh[i].dateToCompany.getFullYear() %></p> 
             <p><strong>الخصم: </strong><%=jomleh[i].discount%></p>
             <p><strong>السعر الكلي بعد الخصم: </strong><%=jomleh[i].finalCost %> شيكل</p>
             <p><strong>المبلغ المدفوع: </strong><%=jomleh[i].WhatIsPayed%></p>
             <p><strong>رقم صاحب المتجر: </strong><%=jomleh[i].personNumber%></p>
             <p><strong>مكان المتجر: </strong><%=jomleh[i].personLocation%></p>
             <p><strong>ملاحظات: </strong><%=jomleh[i].notes%></p>
            </div>
            <div class="col-md-4">
              <table class="table">

                <thead>
                  <tr>
                    <th scope="col">النوع </th>
                    <th scope="col">الكمية</th>
                    <th scope="col">سعر البيع</th>
                  </tr>
                </thead>
                <tbody>
                  
                    <% for(let j=0; j<jomleh[i].items.length; j++) {%>
                    <tr>
                        
                        <td><strong><%= jomleh[i].items[j].type %></strong> </td>
                        <td> <%= jomleh[i].items[j].amount %></td>
                        <td> <%= jomleh[i].items[j].priceForEachOne //* tasleem[i].items[j].amount %>شيكل </td>                   
                      </tr>
                    <% } %>
                 
                </tbody>
              </table>
            </div>
            <div class="col-md-3">
                <form action="/wholesale/<%=jomleh[i]._id%>" method="POST">
                    <div class="form-group">
                      <input class="form-control" type="number" name="money" placeholder="إضافة مبلغ " required>
                    </div>
                    <div class="form-group">
                        <button class="btn btn-success btn-block btn-sm">إضافة</button>
                    </div>
                </form>
            </div>
          </div>
        </div>
      </div>
    <% } %>

    </div>
</div>
<%- include("./partials/footer")%>